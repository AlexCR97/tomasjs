{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Test (debug)",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/jest/bin/jest.js",
        "--runInBand",
        "--testTimeout",
        "300000",
        "--config=${workspaceRoot}/jest.config.ts"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
